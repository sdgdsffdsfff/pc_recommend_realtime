<configuration>
    <!--认证相关 -->
    <property>
        <name>hbase.security.authentication</name>
        <value>kerberos</value>
    </property>
    <property>
        <name>hadoop.security.authentication</name>
        <value>kerberos</value>
    </property>
    <property>
        <name>hbase.rpc.engine</name>
        <value>org.apache.hadoop.hbase.ipc.SecureRpcEngine</value>
    </property>
    <property>
        <name>hbase.ipc.client.fallback-to-simple-auth-allowed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.app.keytab.file</name>
        <value>/etc/hadoop/keytabs/storm.keytab</value>
    </property>
    <property>
        <name>hbase.app.kerberos.principal</name>
        <value>storm/_HOST@SANKUAI.COM</value>
    </property>
    <property>
        <name>hbase.regionserver.kerberos.principal</name>
        <value>hbase/_HOST@SANKUAI.COM</value>
    </property>
    <property>
        <name>hbase.master.kerberos.principal</name>
        <value>hbase/_HOST@SANKUAI.COM</value>
    </property>
</configuration>